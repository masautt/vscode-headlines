{
	"name": "vscode-headlines",
	"displayName": "Headlines",
	"description": "View headlines from https://newsapi.org/ in your toolbar",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
			{
				"command": "extension.launchWebView",
				"title": "Configure Headlines"
            },
            {
				"command": "extension.addExplorerViews",
				"title": "Start Headlines"
            },
            {
				"command": "extension.removeExplorerViews",
				"title": "Stop Headlines"
			}
		],
        "views" : {
            "explorer": [
                {
                    "id" : "headlines1",
                    "name" : "Tech Headlines",
                    "when" : "headlinesEnabled"
                },
                {
                    "id" : "headlines2",
                    "name" : "Science Headlines",
                    "when" : "headlinesEnabled"
                },
                {
                    "id" : "headlines3",
                    "name" : "Music Headlines",
                    "when" : "headlinesEnabled"
                }
            ]
        }
    },
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.40.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
    },
    "dependencies": {
		"axios": "^0.19.0"
	}
}